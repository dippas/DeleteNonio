{
  "manifest_version": 3,
  "name": "DeleteNonio",
  "version": "2.0.0",
  "author": "dippas",
  "homepage_url": "https://github.com/dippas/DeleteNonio",
  "description": "Remover NONIO. Sempre actualizado para remover o nonio dos sites.",
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "DeleteNonio",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.tsx"]
    }
  ]
}
